{
  "name": "dashboard",
  "version": "0.0.1",
  "description": "Simple webapp to display information like a dashboard",
  "main": "index.ts",
  "scripts": {
    "copy-files": "copyfiles -u 4 ./node_modules/@picocss/pico/css/pico.classless.min.css ./public/css/",
    "build": "rimraf ./public && npm run copy-files && npx tsc",
    "prestart": "npm run build",
    "start": "node public/index.js",
    "preserve": "npm run build",
    "serve": "concurrently \"tsc -w\" \"nodemon public/index.js\""
  },
  "keywords": [
    "node",
    "express",
    "dashboard"
  ],
  "author": "Shom Bandopadhaya",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "@picocss/pico": "^1.5.10",
    "ejs": "^3.1.9",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "nodemon": "3.0.1",
    "rimraf": "5.0.1",
    "concurrently": "8.2.0"
  }
}
